{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "paths": {
      "@components/*" : ["src/components/*"],
      "@utils/*" : ["src/utils/*"],
      "@scripts/*" : ["src/scripts/*"],
      "@variables/*" : ["src/variables/*"],
      "@public/*" : ["public/*"],
    }
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}